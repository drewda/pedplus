#container
  #side-bar
    #side-top
      | PedPlus icon
    #accordion
      h2
        a(href="#user") User Name
      #user-tab
        a.button#account-settings-button(href="#") Account Settings
        a.button#sign-out-button(href="#") Sign Out
      h2
        a#project-tab-link(href="#") Project
      #project-tab
        p select project
        p switch project
        p rename project
      h2
        a(href="#") Map
