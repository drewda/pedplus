- content_for :body do
  .row
    .span10
      h1 = @organization.name
    .span2(align="right")
      = link_to "Edit Organization", edit_manage_organization_path(@organization.id), :class => "btn"
  p
    = link_to @organization.url, @organization.url
  p
    = @organization.address
    br
    = @organization.city 
    | , 
    = @organization.state
    | , 
    = @organization.postal_code
    br
    = @organization.country
  p
    ' Time zone:
    = @organization.time_zone
  h3 Subscription
  p
    ' Kind: 
    = @organization.kind_display
    br
    ' Owns PedCount?
    == @organization.owns_pedcount ? '<i class="icon-ok"></i>' : '<i class="icon-remove"></i>'
    br
    ' Owns PedPlus?
    == @organization.owns_pedplus ? '<i class="icon-ok"></i>' : '<i class="icon-remove"></i>'
    br
    ' Default max number of counting locations per project: 
    strong = @organization.default_max_number_of_counting_locations_per_project
    br
    ' Default number of counting day credits per user: 
    strong = @organization.default_number_of_counting_day_credits_per_user
    br
    ' Subscription active until: 
    strong = @organization.subscription_active_until.strftime "%d %B %Y"

  = render "/manage/users/table"
  = render "/manage/projects/table"

= render :template => '/manage/layout'